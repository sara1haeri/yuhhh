<!DOCTYPE html>
<html>
    <head>
        <style>
            body{
                display:flex;
                flex-wrap: wrap;
            }
            
        </style>
    </head>
	<body>

	<script>
	    for(var i = 0; i < 49; i++)
	    {
	        var squareOne = document.createElement("div");
	        
	        if(i % 2 == 0){
	            squareOne.style.backgroundColor = "black";
	        }else{
	            squareOne.style.backgroundColor = "red";
	        }
	            
	        squareOne.style.width = 100/7 + "%";
	        squareOne.style.height = "60px";
	        
	        document.body.appendChild(squareOne);
	        
	    }
	</script>
	</body>
</html>
