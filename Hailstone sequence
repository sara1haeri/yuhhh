// This is where global variables are put
var count = 0

// The start function takes the inputted number and checks if 
// it is divisible by 2. If not, the program multiplies that number 
// by 3 and adds 1 until the final number equals to 1.
function start(){
	var number = readInt("Enter number: ");
	while(number != 1){
	    println(number);
	    if(number % 2 == 0){
	        number = number/2;
	    }else{
	        number = number*3+1;
	    }
	    count++
	}
	println(number);
	println("It took " + count + " steps to complete.");
}
